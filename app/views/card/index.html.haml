.card
  = render partial: "/shared/header"
  .card__card-main
    .card__card-main__mask
      = render partial:"/shared/mypage-left"
      .card__card-main__mask__contents
        .card__card-main__mask__contents__header
          支払い方法
        .card__card-main__mask__contents__content
          .card__card-main__mask__contents__content__theme
            登録クレジットカード情報
          .card__card-main__mask__contents__content__menu
            = image_tag "/assets/material/credit/#{@default_card_src}", width: '40', height: '25', alt: @default_card_brand, id: "card_image",class:"card__card-main__mask__contents__content__menu__brand"
            .card__card-main__mask__contents__content__menu__number
            = "**** **** **** " + @default_card_information.last4
            .card__card-main__mask__contents__content__menu__date
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            .card__card-main__mask__contents__content__menu__delete
            = form_tag(delete_user_card_index_path(user_id: current_user.id), method: :delete, id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button.card__card-main__mask__contents__content__menu__delete__btn 削除する
          .card__card-main__mask__contents__content__info
            = link_to "#", class: "card__card-main__mask__contents__content__info__text" do
              支払い方法について　＞
  .mypage__footer
    = render "/shared/footer"

  = render partial: "/shared/sellbtn"
