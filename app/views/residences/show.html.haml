.residence
  = render partial: "/shared/header"
  .residence__main
    .residence__main__mask
      .residence__main__mask__left
        %ul.residence__main__mask__left__nav-list
          = link_to '#', class: 'residence__main__mask__left__nav-list__item residence__main__mask__left__nav-list__item--active' do 
            %li マイページ
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li お知らせ
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li やることリスト
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li いいね！一覧
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 出品する
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 出品した商品-出品中
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 出品した商品-取引中
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 出品した商品-売却済み
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 購入した商品-取引中
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 購入した商品-過去の取引
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li ニュース一覧
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 評価一覧
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li ガイド
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li お問い合わせ
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
        %h3.residence__main__mask__left__nav-head
          メルペイ
        %ul.residence__main__mask__left__nav-list
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 売上・振り込み申請
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li ポイント
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
        %h3.residence__main__mask__left__nav-head
          設定
        %ul.residence__main__mask__left__nav-list
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li プロフィール
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 発送元・お届け先情報変更
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do 
            %li 支払い方法
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li メール/パスワード
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 本人情報
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li 電話番号の確認
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
          = link_to '#', class: 'residence__main__mask__left__nav-list__item' do
            %li ログアウト
            = icon("fa", "angle-right", class: 'residence__main__mask__left__nav-list__item__arrow')
      .residence__main__mask__right
        .residence__main__mask__right__head
        = form_with(model: [@user,@residence], class: 'residence__main__mask__right__form', local: true) do |f|
          .residence__main__mask__right__form__mask
            .residence__main__mask__right__form__mask__name
              %p.residence-form-head
                %span.residence-form-text お名前
                %span.residence-form-required 必須
              = f.text_field :family_name, placeholder: '例)山田', class: 'residence__main__mask__right__form__mask__name__familyname'
              = f.text_field :last_name, placeholder: '例)彩', class: 'residence__main__mask__right__form__mask__name__lastname'
            .residence__main__mask__right__form__mask__jname
              %p.residence-form-head
                %span.residence-form-text お名前カナ
                %span.residence-form-required 必須
              = f.text_field :j_family_name, placeholder: '例)ヤマダ', class:'residence__main__mask__right__form__jname__jfamilyname'
              = f.text_field :j_last_name, placeholder: '例)アヤ', class: 'residence__main__mask__right__form__jname__jlastname'
            .residence__main__mask__right__form__mask__postcode
              %p.residence-form-head
                %span.residence-form-text 郵便番号
                %span.residence-form-required 必須
              = f.text_field :postcode, placeholder: '例)123-4567', class: 'residence__main__mask__right__form__mask__postcode__postcode'
            .residence__main__mask__right__form__mask__prefecture
              %p.residence-form-head
                %span.residence-form-text 都道府県
                %span.residence-form-required 必須
              -# オプションはuser登録ページから拾ってくることにする
              = f.text_field :prefecture, placeholder: '例)'
            .residence__main__mask__right__form__mask__city
              %p.residence-form-head
                %span.residence-form-text 市区町村
                %span.residence-form-required 必須
              = f.text_field :city, placeholder: '例)横浜市緑区', class: 'residence__main__mask__right__form__mask__city__city'
            .residence__main__mask__right__form__mask__block
              %p.residence-form-head
                %span.residence-form-text 番地
                %span.residence-form-required 必須
              = f.text_field :block, placeholder: '例)青山1-1-1', class: 'residence__main__mask__right__form__mask__block__block'
            .residence__main__mask__right__form__mask__building
              %p.residence-form-head
                %span.residence-form-text 建物名
                %span.residence-form-optional 任意
              = f.text_field :building, placeholder: '例)柳ビル103', class: 'residence__main__mask__right__form__mask__building__building'
            .residence__main__mask__right__form__mask__phonenumber
              %p.residence-form-head
                %span.residence-form-text 電話
                %span.residence-form-optional 任意
              = f.text_field :phone_number, placeholder: '例)09012345678', class: 'residence__main__mask__right__form__mask__phonenumber__phonenumber'
            .residence__main__mask__right__form__mask__button
              = f.submit '送信', class: 'residence__main__mask__right__form__mask__button__button'
  .residence__footer
    = render "/shared/footer"

  = render partial: "/shared/sellbtn"